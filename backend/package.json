{
  "name": "rp4",
  "version": "1.0.0",
  "main": "server.js",
  "engines": { "node": "15.13.0" },
  "repository": "https://github.com/guilhermesam/rp4",
  "author": "Guilherme Samuel <guilhermesamuel79@gmail.com>",
  "license": "MIT",
  "scripts": {
    "postinstall": "tsc",
    "start": "node dist/server.js",
    "dev": "dotenv -e .env -- ts-node-dev --respawn --transpile-only --files --ignore-watch node_modules --no-notify src/server.ts",
    "typeorm": "dotenv -e .env -- npx ts-node ./node_modules/typeorm/cli.js",
    "test": "jest --no-cache",
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored",
    "watch-node": "nodemon dist/server.js",
    "watch-ts": "tsc -w",
    "deploy": "git add . && git commit -m Heroku && git push heroku master"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.13",
    "@babel/core": "^7.12.13",
    "@babel/node": "^7.12.13",
    "@babel/preset-env": "^7.12.13",
    "@babel/preset-typescript": "^7.12.13",
    "@types/axios": "^0.14.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/supertest": "^2.0.10",
    "@types/uuidv4": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "babel-cli": "^6.26.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "dotenv-cli": "^4.0.0",
    "eslint": "^7.12.1",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "superagent": "^6.1.0",
    "supertest": "^6.1.3",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "bcryptjs": "^2.4.3",
    "cryptiles": "^4.1.2",
    "express": "^4.17.1",
    "hoek": "^4.2.1",
    "jsonwebtoken": "^8.5.1",
    "mysql": "^2.18.1",
    "reflect-metadata": "^0.1.13",
    "ts-jest": "^26.5.1",
    "typeorm": "^0.2.31",
    "uuid": "^8.3.2",
    "uuidv4": "^6.2.6",
    "yargs-parser": "^13.1.2"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testPathIgnorePatterns": [
      "*.js"
    ]
  }
}
